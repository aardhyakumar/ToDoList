<%- include("header") -%>

  <div class="box" id="heading">
    <h1> <%= listTitle %> </h1>
  </div>

  <div class="box">

    <% newListItems.forEach(function(nli) { %>
    <form class="" action="/delete" method="post">
      <div class="item">
         <input type="checkbox" name="checkbox" value="<%=nli.id%>" onChange="this.form.submit()">
         <p><%= nli.name  %></p>
       </div>

       <input type="hidden" name="deleteItem" value="<%=listTitle%>">
    </form>
      <% }) %>

      <form class="item" action="/" method="post">
        <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
        <button type="submit" name="list" value="<%=listTitle%>">+</button>
      </form>
  </div>

<%- include("footer") -%>
